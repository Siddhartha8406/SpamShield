{
    "manifest_version": 3,
    "name": "SpamMaildetector",
    "version": "1.0",
    "description": "A web extension that detects spam mail",
    "permissions": [
        "tabs",
        "activeTab",
        "userScripts",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "128": "icons/icon96.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon96.png"
    }
}
